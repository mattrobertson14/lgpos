<p id="notice"><%= notice %></p>

<h1>Listing Product Lines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbr</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_lines.each do |product_line| %>
      <tr>
        <td><%= product_line.name %></td>
        <td><%= product_line.abbr %></td>
        <td><%= product_line.description %></td>
        <td><%= link_to 'Show', product_line %></td>
        <td><%= link_to 'Edit', edit_product_line_path(product_line) %></td>
        <td><%= link_to 'Destroy', product_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

