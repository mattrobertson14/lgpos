<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Pattern</th>
      <th>Name</th>
      <th>Abbr</th>
      <th>Description</th>
      <th>Color</th>
      <th>Size</th>
      <th>Dimensions</th>
      <th>Price</th>
      <th>Sku</th>
      <th>Netsuite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.pattern %></td>
        <td><%= product.name %></td>
        <td><%= product.abbr %></td>
        <td><%= product.description %></td>
        <td><%= product.color %></td>
        <td><%= product.size %></td>
        <td><%= product.dimensions %></td>
        <td><%= product.price %></td>
        <td><%= product.sku %></td>
        <td><%= product.netsuite_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

